{
  "manifest_version": 3,
  "name": "Nexus Direct to Download Manager",
  "version": "1.0",
  "icons": {
    "16": "icon48.png",
    "32": "icon48.png",
    "48": "icon48.png",
    "128": "icon48.png"
  },
  "action": {
    "default_icon": {
      "16": "icon48.png",
      "19": "icon48.png",
      "32": "icon48.png",
      "38": "icon48.png",
      "48": "icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.nexusmods.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
"browser_specific_settings": {
    "gecko": {
      "id": "nexus-direct-helper@intervein.github",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}